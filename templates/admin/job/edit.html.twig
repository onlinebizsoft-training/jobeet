{% extends 'admin/base.html.twig' %}

{% form_theme form _self %}

{% block _job_logo_widget %}
    {% if form.vars.data %}
        <img class="media-object" style="width: 100px; height: 100px;" src="{{ asset(jobs_web_directory ~ '/' ~ form.vars.data) }}"><br>
    {% endif %}

    {{ form_widget(form) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Edit job'|trans }}</h1>

    {% include 'admin/table.html.twig' with {'form': form} only %}

    <a href="{{ path('admin.job.list') }}" class="btn btn-default">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
        {{ 'Back to list'|trans }}
    </a>
{% endblock %}